/**app.wxss**/
page{
  background: rgba(0, 0, 0, 0.1);
}

.img-big{
  top: -60rpx;
  left: 225rpx;
  position: absolute;
  width: 250rpx;
  height: 350rpx;
}

.img-small{
  top: -60rpx;
  left: 250rpx;
  position: absolute;
  width: 200rpx;
  height: 280rpx;
}

.content-wrapper{
  position: relative;
  margin: 100rpx auto 50rpx;
  background: white;
  width: 700rpx;
  height: 1050rpx;
  border: 3rpx solid rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  text-align: center;
}

.title-big{
  font-size: 40rpx;
  line-height: 49rpx;
  opacity: 0.9;
  margin: 320rpx auto 50rpx;
  font-weight: bold;
}

.btn-wrapper{
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
  width: 100%;
  font-size: 30rpx;
  line-height: 42rpx;
}

.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 250rpx;
  height: 80rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.4);
  border-radius: 10rpx;
}

.btn-icon{
  width: 60rpx;
  height: 60rpx;
}

.hot-wrapper{
  text-align: center;
  margin-bottom: 150rpx;
}

.hot-movie-wrapper{
  display: flex;
  justify-content: flex-start;
  margin: 50rpx auto 0;
  width: 650rpx;
  height: 280rpx;
  background: white;
}

.hot-img{
  width: 200rpx;
  height: 100%;
}

.hot-title{
  margin: 60rpx 30rpx;
  font-size: 38rpx;
  line-height: 40rpx;
  font-weight: bold;
  text-align: left;
  opacity: 0.9;
}

.hot-type{
  margin-left: 30rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: left;
  opacity: 0.8;
}