/* pages/my/my.wxss */


.hot-title{
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.user-wrapper{
  display: flex;
  align-items: center;
}

.user-icon{
  margin: 20rpx;
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}

.user-name{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
}

.btn-index{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  font-size: 35rpx;
  line-height: 100rpx;
  text-align: center;
  background: white;
  border-top: 1rpx solid rgba(0, 0, 0, 0.3);
}

.hot-type{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 350rpx;
}