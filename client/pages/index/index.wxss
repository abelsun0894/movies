/* pages/index/index.wxss */
page{
}
.wrapper{
  text-align: center;
  padding: 50rpx 0;
}

.hot-img{
  height: 700rpx;
  width: 600rpx;
}

.title{
  margin: 40rpx 0;
  font-size: 60rpx;
  line-height: 84rpx;
  opacity: 0.8;
}

.comment-wrapper{
  display: flex;
  justify-content: center;
  align-items: center;
}

.comment-img{
  margin-right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.content{
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.7;
}

.btn-wrapper{
  position: fixed;
  left: 0;
  bottom: 0;
  background: white;
  height: 150rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
}

.hot-btn{
  display: flex;
  flex: auto;
  justify-content: center;
  align-items: center;
}

.hot-btn-img{
  height: 80rpx;
  width: 80rpx;
}
